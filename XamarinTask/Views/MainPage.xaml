                IsClippedToBounds="True"
                HorizontalOptions="Center"
                VerticalOptions="Center"  Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">
                    <Image Source="profile.png" Aspect="AspectFill"  Margin="-20"  HeightRequest="80" WidthRequest="80" />
                </Frame>
                <Label Text="Welcome" FontSize="Small" Grid.Row="0" Grid.Column="1" VerticalTextAlignment="End"/>
                <Label Text="Tony Roshdy" FontSize="Large" Grid.Row="1" Grid.Column="1" VerticalTextAlignment="Start" TextColor="{StaticResource NameTextColor}"/>
                <Button ImageSource="explore.png" Text="Articles" Grid.Row="2" Grid.ColumnSpan="2" Command="{Binding NavigateToArticles}"/>
                <Button ImageSource="live.png" Text="Live Chat"  Grid.Row="3" Grid.ColumnSpan="2" Command="{Binding NavigateToLiveChat}" />
                <Button ImageSource="gallery.png" Text="Gallery" Grid.Row="4" Grid.ColumnSpan="2" Command="{Binding NavigateToGallery}"/>
                <Button ImageSource="wishlist.png" Text="Wish List"  Grid.Row="5" Grid.ColumnSpan="2" Command="{Binding NavigateToWishList}" />
                <Button ImageSource="onlineNews.png" Text="Explore Online News" Grid.Row="6"  Grid.ColumnSpan="2" Command="{Binding NavigateToExploreNews}"/>-->
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>