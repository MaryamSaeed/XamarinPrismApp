<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:prism="http://prismlibrary.com"
            prism:ViewModelLocator.AutowireViewModel="True"
            x:Class="XamarinTask.Views.ArticleDetailPage"
            Title="{Binding Title}">
    <StackLayout BackgroundColor="{StaticResource BackgroundColor}" Margin="20">
        <Image Source="{Binding ImageSource}" HorizontalOptions="CenterAndExpand"/>
        <Label Text="{Binding ArticleText}" FontSize="Large" HorizontalOptions="CenterAndExpand"  Padding="10"/>

        <Button Text="Open website" TextColor="{StaticResource BackgroundColor}" TextTransform="Uppercase" VerticalOptions="End" BackgroundColor="{StaticResource NavigationBarColor}"/>
    </StackLayout>
  
</ContentPage>